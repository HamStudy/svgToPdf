{
    "$schema": "https://json.schemastore.org/tsconfig",
    // "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
        "esModuleInterop": true,
        "sourceMap": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "dist",
        "preserveConstEnums": false,
        "lib": [
            "DOM",
            "es2020",
        ],
        "removeComments": false,
        "target": "es2020"
    },
    "include": [
        "src/**/*"
    ]
}
